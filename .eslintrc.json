{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["@typescript-eslint", "prettier", "jest"],
  "env": {
    "jest/globals": true,
    "node": true,
    "es2021": true
  },
  "rules": {
    "prettier/prettier": "error",
    "curly": ["error", "multi-line"]
  }
}
